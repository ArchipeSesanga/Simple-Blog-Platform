<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Easy Recipes</title>
    <link rel="stylesheet" href="/styles/main.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="content">
    <!-- Header -->
    <div class="container text-center pt-4">
        <h2>EASY RECIPES 👨🏾‍🍳</h2>
        <h4>for summer 🌤️</h4>
        <p>Learn and teach each other how to cook 💯</p>
        <a href="/new" class="btn btn-lg btn-primary" style="background-color: #f8a9ad;">Add New Recipe</a>
    </div>

    <!-- Recipes Section -->
    <div class="container mt-4">
        <div class="row">
            <% if (recipes.length === 0) { %>
                <div class="col-12 text-center">
                    <p>No recipes yet. Be the first to add one!</p>
                </div>
            <% } else { %>
                <% recipes.forEach(recipe => { %>
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title"><%= recipe.title %></h5>
                                <% if (recipe.author) { %>
                                    <h6 class="card-subtitle mb-2 text-muted">By <%= recipe.author %></h6>
                                <% } %>
                                <h6>Ingredients:</h6>
                                <p><%= recipe.ingredients.replace(/\n/g, '<br>') %></p>
                                <h6>Instructions:</h6>
                                <p><%= recipe.instructions.replace(/\n/g, '<br>') %></p>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } %>
        </div>
    </div>
</div>

<!-- Sidebar -->
<div class="sidenav">
    <div class="container">
        <div class="col">
            <div class="container-link">
                <a href="/">Home</a>
            </div>
            <div class="container-link">
                <a href="/new">New Recipe</a>
            </div>
            <div class="container-link">
                <a href="/post">Feeds</a>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
